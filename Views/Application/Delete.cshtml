@model Rocky.Models.ApplicationModel

<form method="post" asp-action="Delete">
    <input asp-for="ApplicationId" hidden />
    <div class="border p-4">
        <div class="form-group row">
            <h2 class="text-info">Delete Application</h2>
        </div>
        <div class="form-group row">
            <div class="col-4">
                <label asp-for="Name"></label>
            </div>
            <div class="col-8">
                <input disabled type="text" asp-for="Name" class="form-control" />
            </div>
        </div>        
        <div class="form-group row">
            <div class="col-4">

            </div>
            <div class="col-4">
                <button class="btn btn-info w-100" type="submit">DELETE</button>
            </div>
            <div class="col-4">
                <a asp-action="Index" class="btn btn-primary w-100"><i class="fas fa-arrow-circle-left"></i> Back</a>
            </div>
        </div>
    </div>
</form>
