@model IEnumerable<Rocky.Models.ApplicationModel>

<div class="container">
    <div class="row pt-4">
        <div class="col-6">
            <h2 class="text-primary">Application List</h2>
        </div>
        <div class="col-6 text-right">
            <a asp-controller="Application" asp-action="Create" class="btn btn-primary">
                <i class="fas fa-plus"></i>
                Create New Application
            </a>
        </div>
    </div>
    <br />
    <br />
    @if (Model.Count() > 0)
    {
        <table class="table table-bordered table-striped" style="width:100%">
            <thead>
                <tr>
                    <th>
                        Application Id
                    </th>
                    <th>
                        Name
                    </th>
                    <th>

                    </th>
                </tr>
            </thead>
            <tbody>
                @foreach (var obj in Model)
                {
                <tr>
                    <td>@obj.ApplicationId</td>
                    <td>@obj.Name</td>
                    <td class="text-center">
                        <div class="w-75 btn-group" role="group">
                            <a asp-controller="Application" asp-action="Edit" asp-route-Id="@obj.ApplicationId" class="btn btn-primary mx-2"><i class="fas fa-edit"></i></a>
                            <a asp-controller="Application" asp-action="Delete" asp-route-Id="@obj.ApplicationId" class="btn btn-danger mx-2"><i class="fas fa-trash-alt"></i></a>
                        </div>
                    </td>
                </tr>
                }
            </tbody>
        </table>
    }
    else
    {
        <p>No Application Exist</p>
    }
</div>