@model Rocky.Models.ApplicationModel

<form method="post" asp-action="Edit">
    <input asp-for="ApplicationId" hidden />
    <div class="border p-4">
        <div asp-validation-summary="ModelOnly" class="text-danger"></div>
        <div class="form-group row">
            <h2 class="text-info">Edit Application</h2>
        </div>
        <div class="form-group row">
            <div class="col-4">
                <label asp-for="Name"></label>
            </div>
            <div class="col-8">
                <input type="text" asp-for="Name" class="form-control" />
                <span asp-validation-for="Name" class="text-danger"></span>
            </div>
        </div>       
        <div class="form-group row">
            <div class="col-4">

            </div>
            <div class="col-4">
                <button class="btn btn-info w-100" type="submit">UPDATE</button>
            </div>
            <div class="col-4">
                <a asp-action="Index" class="btn btn-primary w-100"><i class="fas fa-arrow-circle-left"></i> Back</a>
            </div>
        </div>
    </div>
</form>

@section Scripts {
    @{
        <partial name="_ValidationScriptsPartial" />
    }
}